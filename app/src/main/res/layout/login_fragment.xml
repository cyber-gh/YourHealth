<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#D3FFFFFF">

    <TextView
            android:text="Connect to your Guard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:textSize="24sp" android:typeface="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
            android:layout_marginTop="10dp" android:fontFamily="@font/poppins_light" android:textColor="#85000000"/>
    <ImageView
            android:layout_width="154dp"
            android:src="@drawable/main_logo"
            android:layout_height="177dp"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/final_logo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailField" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1" android:hint="Username" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/poppins_light"
            android:textColor="#85000000" android:textColorHint="#85000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/emailField"
            app:layout_constraintEnd_toEndOf="@+id/emailField" app:layout_constraintStart_toStartOf="@+id/emailField"
            android:hint="Password" android:fontFamily="@font/poppins_light" android:textColor="#85000000"
            android:textColorHint="#85000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField" android:hint="User Type"
            app:layout_constraintEnd_toEndOf="@+id/passwordField"
            app:layout_constraintStart_toStartOf="@+id/passwordField" android:fontFamily="@font/poppins_light"
            android:textColor="#85000000" android:textColorHint="#85000000"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="@+id/editText3" android:fontFamily="@font/poppins_light"
            android:background="#82C8A0" android:textColor="#FEFFFF" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>